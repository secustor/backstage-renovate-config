    },
    {
      "allowedVersions": "<15.0.0",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@octokit/graphql-schema"]
    },
    {
      "allowedVersions": "<13.0.0",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@octokit/webhooks"]
    },
    {
      "allowedVersions": "<21.0.0",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@octokit/rest"]
    }
  ]
}
